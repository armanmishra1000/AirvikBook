{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowIAMUserFullAccess",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::341405829743:user/airvikbook-s3-user"
            },
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::airvikbook-uploads-web",
                "arn:aws:s3:::airvikbook-uploads-web/*"
            ]
        },
        {
            "Sid": "PublicReadForProfilePictures",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::airvikbook-uploads-web/profiles/*"
        },
        {
            "Sid": "PublicReadForRoomImages",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::airvikbook-uploads-web/rooms/*"
        },
        {
            "Sid": "PublicReadForPropertyImages",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::airvikbook-uploads-web/properties/*"
        },
        {
            "Sid": "DenyUnencryptedObjectUploadsForNonIAMUsers",
            "Effect": "Deny",
            "Principal": {
                "AWS": "arn:aws:iam::341405829743:user/airvikbook-s3-user"
            },
            "NotAction": "s3:PutObject",
            "Resource": "arn:aws:s3:::airvikbook-uploads-web/*",
            "Condition": {
                "StringNotEquals": {
                    "s3:x-amz-server-side-encryption": "AES256"
                }
            }
        }
    ]
}
